doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/styles.css")
        link(rel="stylesheet", href="/search.css")
        title Document
    body 
        header 
            a(href="/students/leaderboard", class="navbutton") Leaderboard 
            a(href="/submit.html", class="navbutton") Add Student 
            a(href="/fbla.html", class="navbutton") FBLA
            
        h1 Search Student Directory
        form(action="/students", method="get")  
            input(type="text", placeholder="Search..." name="q")
            input(type="submit", value="Search")
        ul 
            each student in results
                a(href=`/students/${student.entityId}`)
                    li= `${student.entityFields.firstName._value} ${student.entityFields.lastName._value}`