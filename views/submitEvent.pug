extends eventLayout.pug 

block css 
    link(rel="stylesheet", href="/submit.css")
block content 
    h1 New Event Form
    form(method="post", action="/events/new")
        label(for="title") 
            strong Title: 
        input(required, id="title", name="title", type="text", placeholder="Title...")
        

        label(for="description") 
            strong Description: 
        textarea(required, id="description", cols="4", name="description", placeholder="Description...")
        

        label(for="date") 
            strong Date: 
        input(required, id="date", name="date", type="datetime-local")
        

        input(type="submit", value="Submit")